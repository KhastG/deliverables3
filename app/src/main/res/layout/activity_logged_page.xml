<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoggedPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGGED PAGE"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="100sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID AND USERNAMES IN THE DATABASE"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="211dp">

        <TextView
            android:id="@+id/tvShowId"
            android:layout_width="90dp"
            android:layout_height="206dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            android:gravity="start|left"
            android:text="\nID: "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvShowResults"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShowResults"
            android:layout_width="193dp"
            android:layout_height="207dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="22dp"
            android:gravity="start|left"
            android:text="\nUsernames"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvShowId"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="100sp"
        android:text="UPDATE" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="100sp"
        android:text="DELETE" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="130sp"
        android:text="LOG OUT" />

</LinearLayout>
