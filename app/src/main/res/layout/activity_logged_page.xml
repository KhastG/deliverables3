<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoggedPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGGED PAGE"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="100sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID AND USERNAMES IN THE DATABASE"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvShowResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usernames"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20sp"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:layout_marginTop="20sp"
        />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:layout_marginTop="20sp"
        android:layout_marginRight="100sp"
        android:layout_marginLeft="100sp"
        />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130sp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="130sp"
        android:text="LOG OUT" />

</LinearLayout>
